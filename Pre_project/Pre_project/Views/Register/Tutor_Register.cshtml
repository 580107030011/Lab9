@model Pre_project.Models.Tutor

@{
    ViewBag.Title = "Tutor_Register";
}
@using (Html.BeginForm("Tutor_Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <head>
        <title>RIANRAI.COM</title>
    </head>
    <body style="background-color:#18BC9C">

        @Html.AntiForgeryToken()
        <link href="~/asset/NewSignUp.css" rel="stylesheet" type="text/css" />

            <div class="broader">
                <div class="container">
                    <br />
                    <center><p class="Login-p">Tutor</p></center>


                    <div class="group">
                        <input type="text" name="Username" pattern="[a-zA-Z0-9]+" title="Only enter letters" required/>
                        <label>Username</label>
                        <p style="color:red ; font-weight:bold">@ViewBag.Message</p>
                    </div>
                    <div class="group">
                        <input id="password" name="Password" type="password" minlength="6" pattern="[a-zA-Z0-9]+" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Must have at least 6 characters' : ''); if(this.checkValidity()) form.password_two.pattern = this.value;" required />

                        <label>Password</label>
                    </div>

                    <div class="group">
                        <input id="password_two" name="Password_two" type="password" minlength="6" pattern="[a-zA-Z0-9]+" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same Password as above' : '');" required />
                        <label>Comfirmpassword</label>
                    </div>

                    <div class="group">
                        <input type="text" name="Tutor_name" required />
                        <label>ชื่อจริง</label>
                    </div>

                    <div class="group">
                        <input type="text" name="Tutor_lastname" required />
                        <label>นามสกุล</label>
                    </div>

                    <div class="group">
                        <label>เพศ</label>
                        <div style="padding-top:40px">
                            <select name="Sex" required>
                                <option value="ชาย">ชาย</option>
                                <option value="หญิง">หญิง</option>
                            </select>
                        </div>
                    </div>

                    <div class="group">
                        <input type="tel" name="Tel" required />
                        <label>เบอร์ติดต่อ</label>
                    </div>

                    <div class="group">
                        <input type="email" name="email" required />
                        <label>อีเมล</label>
                    </div>

                    <div class="group">
                        <input type="text" name="education" required />
                        <label>การศึกษา</label>
                    </div>


                    <div class="group">
                        <label>ราคาต่อชั่วโมง</label>
                        <div style="padding-top:40px">
                            <select name="price" required>
                                <option value="100 - 300 บาท">100 - 300 บาท</option>
                                <option value="301 - 500 บาท">301 - 500 บาท</option>
                                <option value="501 - 700 บาท">501 - 700 บาท</option>
                                <option value="701 - 900 บาท">701 - 900 บาท</option>
                                <option value="901 - 1200 บาท">901 - 1200 บาท</option>
                                <option value="1201 - 1500 บาท">1201 - 1500 บาท</option>
                                <option value="มากกว่า 1500 บาท">มากกว่า 1500 บาท</option>
                            </select>
                        </div>
                    </div>

                    <div class="group">
                        <input type="file" name="file" id="file" accept="image/png, image/jpeg" required />
                        <p style="color:red ; font-weight:bold">@ViewBag.Message1</p>
                    </div>

                    <input class="Login_ok" type="submit" value="OK" />
                    <input class="Login_ok" type="button" value="Cancel" onclick="location.href='@Url.Action("Register","Register")';" />


                </div>
            </div>
    </body>

}