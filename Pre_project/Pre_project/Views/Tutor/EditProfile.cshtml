@model Pre_project.Models.Tutor

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutT.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>RIANRAI.COM</title>
    <!-- Bootstrap core CSS -->
    <link href="~/asset/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="~/asset/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/asset/css/freelancer.css" rel="stylesheet">
</head>

<body id="page-top">
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <span class="name">แก้ไขโปร์ไฟล์ของฉัน</span>
                <hr class="star-light">
            </div>
        </div>
    </header>

@using (Html.BeginForm("EditProfile", "Tutor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <center>
        <div class="row">
            <div class="col-md-12 personal-info">
                <div class="form-group">
                    <label>Username : </label>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" name="new_username" value="@Model.Username" disabled>
                    </div>
                </div>

                <div class="form-group">
                    <label>ชื่อจริง : </label>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" name="new_firstname" value="@Model.Tutor_name">
                    </div>
                </div>

                <div class="form-group">
                    <label>นามสกุล : </label>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" name="new_lastname" value="@Model.Tutor_lastname">
                    </div>
                </div>

                <div class="form-group">
                    <label>เพศ : </label>
                    <div class="col-lg-4">
                        <select name="new_sex" value="@Model.Sex" >
                            <option value="ชาย">ชาย</option>
                            <option value="หญิง">หญิง</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>เบอร์ : </label>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" name="new_tel" value="@Model.Tel">
                    </div>
                </div>

                <div class="form-group">
                    <label>อีเมล : </label>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" name="new_email" value="@Model.Email">
                    </div>
                </div>

                <div class="form-group">
                    <label>การศึกษา : </label>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" name="new_education" value="@Model.Education">
                    </div>
                </div>

                <div class="form-group">
                    <label>ราคาต่อชั่วโมง : </label>
                    <div class="col-lg-4">
                        <select name="new_price" value="@Model.Price" >
                            <option value="100 - 300 บาท">100 - 300 บาท</option>
                            <option value="301 - 500 บาท">301 - 500 บาท</option>
                            <option value="501 - 700 บาท">501 - 700 บาท</option>
                            <option value="701 - 900 บาท">701 - 900 บาท</option>
                            <option value="901 - 1200 บาท">901 - 1200 บาท</option>
                            <option value="1201 - 1500 บาท">1201 - 1500 บาท</option>
                            <option value="มากกว่า 1500 บาท">มากกว่า 1500 บาท</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>รูปโปรไฟล์ : </label>
                    <div class="col-lg-4">
                        <input type="file" name="new_image" id="file" accept="image/png, image/jpeg" />
                    </div>
                </div>
                <br />
                <button class="btn btn-success btn-lg" type="submit">บันทึก</button>
                <button class="btn btn-success btn-lg" onclick="location.href='@Url.Action("ProfileStudent", "Tutor")';">ยกเลิก</button>
               </div>
        </div>
    </center>
    <br />
    <br />
}
</body>
</html>
